!!!
%html
  %head
    %title Adamantio
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag "bootstrap-scrollspy.js"
    = csrf_meta_tag
  %body
    %a(href="http://github.com/adamantio/adamantio")
      %img(alt="Fork me on GitHub" src="http://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" style="position: fixed; top: 0; right: 0; border: 0; z-index:10002")
    .topbar{"data-scrollspy"=>"scrollspy", :id => "topbar"}
      .fill
        .container
          %a.brand{:href => "#"} Adamantio
          %ul.nav
            %li
              %a{:href => "#"} Home
            %li
              %a{:href => "#authors"} Authors
            %li
              %a{:href => "#roadmap"} Roadmap
            %li
              %a{:href => "#source"} Source              
          %form.pull-right{:action => "http://groups.google.com/group/adamantio-announce/boxsubscribe"}
            %input.input-large{:placeholder => "Email", :name=> "email", :type => "email"}
              %button.btn{:type => "submit", :name => "sub"} Subscribe
    .container
      = yield       
      %footer
        %p Â© Adamantio Project 2011
